<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/login_logo_tw"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/loginbg_02" />

    <LinearLayout
        android:id="@+id/login_input_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/loginbg_03"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/login_username_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/loginlist_02"
            android:gravity="center_vertical"
            android:paddingLeft="60dip" 
            android:paddingRight="40dp">

            <TextView
                android:id="@+id/login_username_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/login_user" />

            <EditText
                android:id="@+id/login_username_edittext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/main_distance_33"
                android:inputType="textPersonName"
                android:hint="请输入用户名"
                android:singleLine="true"
                android:textColor="#eed596" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/login_password_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/loginlist_02"
            android:gravity="center_vertical"
            android:paddingLeft="60dip" 
            android:paddingRight="40dp">

            <TextView
                android:id="@+id/login_password_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/login_lock" />

            <EditText
                android:id="@+id/login_password_edittext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/main_distance_33"
                android:inputType="textPassword"
                android:hint="请输入密码"
                android:singleLine="true"
                android:textColor="#eed596" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.3"
        android:background="@drawable/loginbg_04"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:visibility="visible" >

        <CheckBox
            android:id="@+id/login_rember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
              android:button="@drawable/radiobutton"
              android:gravity="center_vertical"
            android:text="记住密码"
            android:textColor="#fff0c9" />

        <CheckBox
            android:id="@+id/login_remberlogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="自动登录"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >

        <RelativeLayout
            android:id="@+id/login_loginbg_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/loginbg_05" >

            <Button
                android:id="@+id/login_login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/login" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>