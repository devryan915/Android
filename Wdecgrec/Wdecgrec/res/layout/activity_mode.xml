<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mode_welcome"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/modeWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18852408888"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="246dp"
        android:layout_height="247dp"
        android:layout_centerInParent="true"
        android:src="@drawable/main_modebg" />

    <LinearLayout
        android:id="@+id/llContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="303dp"
            android:layout_height="200dp"
            android:gravity="center_vertical" >

            <Button
                android:id="@+id/buttonWearMode"
                style="@style/mode_leftbutton"
                android:text="@string/mode_wearmode" />

            <Button
                android:id="@+id/buttonFamilyMode"
                style="@style/mode_rightbutton"
                android:text="@string/mode_familymode" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="303dp"
            android:layout_height="200dp"
            android:gravity="center_vertical" >

            <Button
                android:id="@+id/buttonSportsMode"
                style="@style/mode_leftbutton"
                android:text="@string/mode_sportsmode" />

            <Button
                android:id="@+id/buttonMonitorMode"
                style="@style/mode_rightbutton"
                android:text="@string/mode_monitormode" />

            <!--
                 <Button
                android:id="@+id/buttonTest"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/buttonMonitorMode"
                android:layout_toRightOf="@+id/buttonSportsMode"
                android:text="Button" />
            -->

        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/buttonSportsModeTip"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/llContent"
        android:layout_marginTop="-55dp"
        android:background="@drawable/mode_tip_bg"
        android:text="@string/mode_waiting_new"
        android:textColor="#000033"
        android:textSize="14sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/buttonMonitorModeTip"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/llContent"
        android:layout_marginTop="-55dp"
        android:background="@drawable/mode_tip_bg"
        android:text="@string/mode_waiting_new"
        android:textColor="#000033"
        android:textSize="14sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="126dp"
        android:layout_height="34dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:background="@drawable/mode_logoutbutton_selector" />

    <Button
        android:id="@+id/buttonSettings"
        android:layout_width="98dp"
        android:layout_height="34dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:background="@drawable/mode_settingsbutton_selector" />

</RelativeLayout>