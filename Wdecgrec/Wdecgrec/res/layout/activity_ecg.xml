<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wdecgrec="http://schemas.android.com/apk/res/com.broadchance.wdecgrec"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#10141f"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <com.broadchance.wdecgrec.widget.CustomTitle
        android:id="@+id/customTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.broadchance.wdecgrec.widget.CustomTitle>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="#2d2d31"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/buttonTitleBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="&lt;心电"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewUseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="18852408888"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/viewChannel1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <com.broadchance.ecgview.ECGGLSurfaceView
            android:id="@+id/ecgGLSurfaceViewChannelMII"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            wdecgrec:ecglinecolor="#000000"
            wdecgrec:gridbgcolor="#ffffff"
            wdecgrec:griddarkcolor="#ccced0"
            wdecgrec:gridlightcolor="#ccced0"
            wdecgrec:leftrightmargin="20dp" />

        <TextView
            android:id="@+id/ecg_curspeedvalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:text="@string/ecg_channel1"
            android:textColor="#5c5c5e"
            android:textSize="13sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/llECG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#121820"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="@string/ecg_curspeedadjust"
                    android:textColor="#5c5c5e"
                    android:textSize="16sp" />

                <RadioGroup
                    android:id="@+id/rgEcgRange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center" >

                        <RadioButton
                            android:id="@+id/ecgRangeLevel1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:button="@null"
                            android:gravity="center"
                            android:text="0.1"
                            android:textColor="@drawable/ecg_radiotextcolor_selector"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center" >

                        <RadioButton
                            android:id="@+id/ecgRangeLevel2"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:button="@null"
                            android:gravity="center"
                            android:text="0.2"
                            android:textColor="@drawable/ecg_radiotextcolor_selector"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center" >

                        <RadioButton
                            android:id="@+id/ecgRangeLevel3"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:button="@null"
                            android:gravity="center"
                            android:text="0.5"
                            android:textColor="@drawable/ecg_radiotextcolor_selector"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center" >

                        <RadioButton
                            android:id="@+id/ecgRangeLevel4"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:button="@null"
                            android:gravity="center"
                            android:text="1.0"
                            android:textColor="@drawable/ecg_radiotextcolor_selector"
                            android:textSize="15sp" />
                    </LinearLayout>
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/viewEcgChannel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#121820"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/ecg_curchannel"
                    android:textColor="#5c5c5e"
                    android:textSize="16sp" />

                <RadioGroup
                    android:id="@+id/rgEcgSpeed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center" >

                        <RadioButton
                            android:id="@+id/ecgSpeedLevel1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:button="@null"
                            android:gravity="center"
                            android:text="10"
                            android:textColor="@drawable/ecg_radiotextcolor_selector"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center" >

                        <RadioButton
                            android:id="@+id/ecgSpeedLevel2"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:button="@null"
                            android:gravity="center"
                            android:text="20"
                            android:textColor="@drawable/ecg_radiotextcolor_selector"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center" >

                        <RadioButton
                            android:id="@+id/ecgSpeedLevel3"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:button="@null"
                            android:gravity="center"
                            android:text="25"
                            android:textColor="@drawable/ecg_radiotextcolor_selector"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center" >
                    </LinearLayout>
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3px"
                android:layout_marginTop="3px"
                android:background="#121820"
                android:orientation="vertical"
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="当前心率"
                    android:textColor="#5c5c5e"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/ecg_curhearrate"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ecg_heartrate"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="@color/light_green"
                    android:textSize="50dp" >
                </Button>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3px"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1.5px"
                    android:layout_weight="1"
                    android:background="#121820"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp" >

                    <TextView
                        android:id="@+id/lblCurDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="当前日期"
                        android:textColor="#5c5c5e" />

                    <TextView
                        android:id="@+id/tvCurDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lblCurDate"
                        android:layout_centerHorizontal="true"
                        android:text="2000-01-01"
                        android:textColor="@color/light_green" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1.5px"
                    android:layout_weight="1"
                    android:background="#121820"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp" >

                    <TextView
                        android:id="@+id/lblCurTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="当前时间"
                        android:textColor="#5c5c5e" />

                    <TextView
                        android:id="@+id/tvCurTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lblCurTime"
                        android:layout_centerHorizontal="true"
                        android:text="00:00:00.000"
                        android:textColor="@color/light_green" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3px"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1.5px"
                    android:layout_weight="1"
                    android:background="#121820"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp" >

                    <TextView
                        android:id="@+id/lblMacAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="MAC地址"
                        android:textColor="#5c5c5e" />

                    <TextView
                        android:id="@+id/tvMacAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lblMacAddress"
                        android:layout_centerHorizontal="true"
                        android:text="00:00:00:00:00:00"
                        android:textColor="@color/light_green" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1.5px"
                    android:layout_weight="1"
                    android:background="#121820"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp" >

                    <TextView
                        android:id="@+id/lbl2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="当前已运行时长"
                        android:textColor="#5c5c5e"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/tvRunTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lbl2"
                        android:layout_centerHorizontal="true"
                        android:text="0"
                        android:textColor="@color/light_green"
                        android:visibility="invisible" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>